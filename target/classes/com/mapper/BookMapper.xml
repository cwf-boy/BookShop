<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.BookMapper">
    <select id="queryByID" parameterType="int" resultType="com.entity.Book">
        select * from books where bookID=#{bookID}
    </select>
    <insert id="addBook" parameterType="com.entity.Book">
        insert into books(bookName,bookNumber,bookDecire) values(#{bookName},#{bookNumber},#{bookDecire})
    </insert>
    <update id="updBook" parameterType="com.entity.Book">
        update books set bookName=#{bookName},bookNumber=#{bookNumber},bookDecire=#{bookDecire} where bookID=#{bookID}
    </update>
    <delete id="delBook" parameterType="int">
        delete from books where bookID=#{bookID}
    </delete>
    <select id="queryAll" resultType="com.entity.Book">
        select * from books
    </select>
    <select id="queryByName" parameterType="String" resultType="com.entity.Book">
        select * from books where bookName=#{bookName}
    </select>
</mapper>